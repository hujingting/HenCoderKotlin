<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旅行"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="世上有不绝的风景，我有不老的心"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_image_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.665"
        android:layout_marginTop="20dp"
        android:src="@drawable/img"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:background="#333333" />

    <ImageView
        android:id="@+id/iv_image_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.33"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        app:layout_constraintDimensionRatio="1:1"
        android:background="#66CFBE"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_image_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#66CFBE"
        android:layout_marginTop="2dp"
        android:src="@drawable/img_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_2"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/iv_image_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.33"
        android:background="#66CFBE"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_3"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_1"
        android:layout_marginTop="2dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/iv_image_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_4"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_1"
        android:layout_marginTop="2dp"
        android:background="#66CFBE"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_image_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#66CFBE"
        android:layout_marginTop="2dp"
        android:src="@drawable/img_5"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_1"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_image_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.665"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_5"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="2dp"
        android:src="@drawable/img_6"
        android:scaleType="centerCrop"
        android:background="#333333" />

    <ImageView
        android:id="@+id/iv_image_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_5"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="2dp"
        android:background="#66CFBE"
        android:src="@drawable/img_7"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_image_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#66CFBE"
        android:layout_marginTop="2dp"
        android:src="@drawable/img_8"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_8"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1/5"
        android:textSize="10sp"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_9"/>

</androidx.constraintlayout.widget.ConstraintLayout>